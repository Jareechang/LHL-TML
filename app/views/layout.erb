                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Groups<b class="caret"></b></a>
                      <ul class="dropdown-menu">
                          <li><a href="/user/<%= session[:user_id] %>/group/show">View Groups</a></li>
                          <li><a href="/user/<%= session[:user_id] %>/group/new">Add groups</a></li>
                      </ul>
                  </li>
              </ul>
             </nav>
              </li>

              <li><a href="/logout">Log Out  </a></li>

            <% end %>
        </div><!--/.nav-collapse -->
