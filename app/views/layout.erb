<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">txt_me_later</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse navbar-right">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <% if session[:user_id] %>
        
            <li>
               <nav class="navbar navbar-inverse navbar-collapse" role="navigation">
              <ul class="nav navbar-nav">
                  <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Messages<b class="caret"></b></a>
                      <ul class="dropdown-menu">
                          <li><a href="/user/<%= session[:user_id] %>">Send individual messages</a></li>
                          <li><a href="/user/<%= session[:user_id] %>/group/send">Send group messages</a></li> 
                          <li><a href="/user/<%= session[:user_id] %>/texts/pending">View Pending <span class="badge badge-collapse"><%= @text_pending && @text_pending.count %></span></a></li>
                          <li>
                          <a href="/user/<%= session[:user_id] %>/texts/archive">View Archive</a>
                          </li>
                      </ul>
                  </li>
              </ul>
             </nav>

            </li>

            <li>
            <nav class="navbar navbar-inverse navbar-collapse" role="navigation">
